---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact', href: '/' },
];
---

<style>
  .desktop { 
    display: none;
  }

  .logo {
    color: var(--black);
    font-size: 1.25rem;
    text-decoration: none;
    font-weight: 900;
  }
  header {
    display: grid;
    grid-template-rows: repeat(2, auto);
    background: var(--black);
  }
  #contact {
    grid-row: 1/2;
    display: flex;
    justify-content: flex-end;
    background: var(--black);
    color: var(--white);
    padding: 1rem 2rem;
  }
  #contact a {
    color: var(--white);
    text-decoration: none;
  }
  #contact a:hover,
  #contact a:active,
  #contact a:focus {
    text-decoration: underline;
  }
  nav {
    grid-row: 2/3;
    background-color: var(--white);
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  nav a {
      color: var(--black);
      text-decoration: none;
    }
  ul {
    display: flex;
    flex-direction: column;
    font-size: 2rem;
  }
  @media( width > 450px) {
    .desktop { 
      display: inline-block;
    }
    .mobile {
      display:none;
    }
    .logo {
      font-size: 1.5rem;
    }
    nav {
      padding: 1rem 2rem;
    }
    nav ul{
      display: flex;
      gap: 1rem;
      list-style-type: none;
    }
  }
</style>

<script>
  const burger = document.querySelector('button.nav-toggle');
  burger?.addEventListener('click', ()=> {
    document.querySelector('nav ul');
  })
</script>

<header>
  <ul id="contact">
    <li class="desktop">
      <span>[]</span>Info@CitizensNetworkofProtection.com
    </li>
    <li class="desktop">
      <span>[]</span>+1 (872) 235-2289
    </li>
    <li>
      <a href="#">Contact</a>
    </li>

  </ul>
  <nav>
    <a href="/" class="logo">Citizen's Network of Protection</a>
    <ul>
      {
        navItems.map((item) => (
          <li>
            <a href={item.href}>{item.name}</a>
          </li>
        ))
      }
    </ul>
    <button 
      class="mobile nav-toggle" 
      aria-expanded="false" 
      aria-controls="menu">
      =
    </button>
  </nav>
</header>

