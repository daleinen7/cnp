---
import { PortableText } from 'astro-portabletext';
import cnpicon from '../images/cnp-icon.svg';

const { heroText, heroImage, ctaText, ctaLink } = Astro.props;
---

<div class="background">
  <div class="overlay"></div>
  <img src={heroImage} alt="decorative" class="full-img" />
  {
    (heroText || ctaLink) && (
      <div class="content">
        <div class="text">
          <PortableText value={heroText} />
        </div>
        {ctaText && ctaLink && (
          <a href={ctaLink} class="button">
            <img src={cnpicon.src} alt="" class="icon" />
            {ctaText}
          </a>
        )}
      </div>
    )
  }
</div>

<style>
  .background {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    text-align: left;
    overflow: hidden;
    color: var(--white);

    img.full-img {
      grid-column: 1/2;
      grid-row: 1/2;
      width: 120%;
      object-fit: cover;
      visibility: hidden;
    }
    
    h2 {
      font-size: 2.75rem;
      margin-bottom: 1rem;
    }
  }
  .overlay {
      display: none;
  }
  p {
    max-width: 80%;
  }

  a {
    display: flex;
    align-items: center;
    gap: 1rem;
    position: relative;
    text-decoration: none;
    color: var(--black);
    padding: 1rem 2rem;
    font-weight: 700;
    border-radius: var(--radius);
    font-size: 1.5rem;
    background: var(--light-gray);
  }
  .content {
    grid-column: 1/2;
    grid-row: 1/2;
    justify-self: center;
    align-self: center;
    max-width: 90%;
    display: flex;
    flex-flow: column wrap;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    margin-top: 1rem;
  }
  .text {
    padding: 2rem;
    color: var(--white);
  }
  .button {
    flex-basis: 75%;
  }
  .icon {
    position: relative;
    height: 2.375rem;
    width: 2.375rem;
  }
  @media (width > 500px) {
    .background img.full-img {
      visibility: visible;
    }
    .content {
      margin: 0;
    }
    .overlay {
      grid-column: 1/2;
      grid-row: 1/2;
      display: inherit;
      opacity: 65%;
      background: linear-gradient(0deg,#4a279100 0%, #130039 56%);
      z-index: 2;
  }
  }
  @media (width > 580px) {
    h2 {
      font-size: 3rem;
    }
    .background img.full-img {
      grid-row: 1/3;
    }
    .content {
      max-width: 50rem;
      justify-self: center;
      padding: 1rem;
    }
    .button {
      width: 60%;
    }
  }
  @media (width > 990px) {
    h2 {
      font-size: 3.75rem;
    }
    img.full-img {
      max-height: 34.4rem;
    }
    .button {
      width: 50%;
    }
  }
  @media (width > 1180px) {
    .content {
      max-width: 68rem;
    }
  }
</style>
