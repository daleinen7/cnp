---
import { PortableText } from 'astro-portabletext';
import cnpicon from '../images/cnp-icon.svg';

const { heroText, heroImage, ctaText, ctaLink } = Astro.props;
---

<div class="background">
  <img src={heroImage} alt="decorative" class="full-img" />
  <div class="content">
    <PortableText value={heroText} />
    {
      ctaText && ctaLink && (
        <a href={ctaLink} class="button">
          <img src={cnpicon.src} alt="" class="icon" />
          {ctaText}
        </a>
      )
    }
  </div>
</div>

<style>
  .background {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    color: var(--base-light);
    text-align: left;
    overflow: hidden;
    color: var(--white);

    img.full-img {
      grid-column: 1/2;
      grid-row: 1/2;
      width: 120%;
      object-fit: cover;
    }

    h2 {
      font-size: 2.75rem;
      margin-bottom: 1rem;
    }

    p {
      text-wrap: balance;
    }
  }

  a {
    display: flex;
    align-items: center;
    gap: 1rem;
    position: relative;
    text-decoration: none;
    color: var(--black);
    padding: 1rem 2rem;
    font-weight: 700;
    border-radius: var(--radius);
    font-size: 1.5rem;
    background: var(--light-gray);
  }
  .content {
    grid-column: 1/2;
    grid-row:1/2;
    justify-self: center;
    align-self: center;
    max-width: 90%;
    background: rgb(0, 0, 0, .5);
    padding: .5rem;
    border-radius: var(--radius);
  }
  .button {
    width: 75%;
    grid-column: 1/2;
    grid-row:2/3;
    justify-self: center;
    align-self: start;
  }
  .icon {
    position: relative;
    height: 2.375rem;
    width: 2.375rem;
  }
  @media ( width > 580px) {
    h2 {
      font-size: 3rem;
    }
    .background img.full-img {
      grid-row: 1/3;
    }
    .content {
      max-width: 50rem;
      justify-self: center;
      padding: 1rem;
    }
    .button {
      width: 60%;
    } 
  }
  @media ( width > 990px) {
    h2 {
      font-size: 3.75rem;
    }
    img.full-img {
      max-height: 34.4rem;
    }
    .button {
      width: 50%;
    } 
  }
  @media ( width > 1180px) {
    .content {
      max-width: 68rem;
    }
  }
</style>
