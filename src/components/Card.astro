---
interface CardProps {
  featuredImage: string;
  author?: string;
  date?: string;
  previewText?: string;
  title: string;
  link: string;
}

const { featuredImage, author, date, previewText, title, link } =
  Astro.props;
---

<div class="card">
  <a href={link}>
    {
      featuredImage && (
        <div class="featured-image">
          <img src={featuredImage} alt={title} />
        </div>
      )
    }
    <div class="content">
      <h2>{title}</h2>
      {author && <p class="author">By {author}</p>}
      {date && <p class="date">{date}</p>}
      {previewText && <p class="preview-text">{previewText}</p>}
    </div>
  </a>
</div>

<style>
  .card {
    border: 1px solid #ddd;
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.2s;
  }

  .card:hover {
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
  }

  .featured-image img {
    width: 100%;
    border-radius: 8px;
    object-fit: cover;
  }

  .content {
    padding: 1rem 0;
  }

  .author,
  .date,
  .preview-text {
    margin: 0.5rem 0;
  }
</style>
