---
import type { SanityDocument } from '@sanity/client';
import { loadQuery } from '../sanity/lib/loadQuery';
import Layout from '../layouts/Layout.astro';
import Headline from '../components/Headline.astro';
import SideBySide from '../components/SideBySide.astro';
import Hero from '../components/Hero.astro';
import BasicContent from '../components/BasicContent.astro';
import FAQ from '../components/FAQ.astro';
import CtaCard from '../components/CtaCard.astro';

export async function getStaticPaths() {
  const { data: page } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "page"]`,
  });

  return page.map((page: SanityDocument) => {
    const { slug } = page;
    return {
      params: {
        slug: slug.current,
      },
    };
  });
}

const { params } = Astro;

const { data: page } = await loadQuery<SanityDocument>({
  query: `*[_type == "page" && slug.current == 'home'][0]{
    title,
    "components": components[]{
      ...,
      _type == 'ctaCards' => {
        _type,
        ctaCards[]{
          ...,
          _type == 'ctaCard' => {
            _type,
            headline,
            text,
            ctaText,
            ctaLink
          }
        }
      },
      _type == 'hero' => {
        _type,
        heroText,
        "heroImage": heroImage.asset->url
      },
      _type == 'headline' => {
        _type,
        headline
      },
      _type == 'sideBySide' => {
        _type,
        headline,
        text,
        "image": image.asset->url
      }

    }
  }`,
  params,
});

const components = page.components || [];
---

<Layout title={page.title}>
  {
    components.map((component: any) => {
      switch (component._type) {
        case 'basicContent':
          return <BasicContent content={component.content} />;
        case 'ctaCards':
          return <CtaCard ctaCards={component.ctaCardList} />;
        case 'faqs':
          return <FAQ faqs={component.faq} />;
        case 'headline':
          return (
            <Headline
              headline={component.headline}
              headingLevel={component.headingLevel}
            />
          );
        case 'hero':
          return (
            <Hero
              heroText={component.heroText}
              heroImage={component.heroImage}
              ctaText={component.ctaText}
              ctaLink={component.ctaLink}
            />
          );
        case 'sideBySide':
          return (
            <SideBySide
              headline={component.headline}
              text={component.text}
              image={component.image}
            />
          );
        case 'spacer':
          return <div style={{ height: component.height }} />;
        default:
          return null;
      }
    })
  }
</Layout>
