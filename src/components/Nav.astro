---
import { loadQuery } from '../sanity/lib/loadQuery';
import emailIcon from '../images/email-icon.svg';
import phoneIcone from '../images/phone-icon.svg';
import logo from '../images/logo-icon.svg';
import type { NavData, NavItem } from '../lib/types';

const { data: nav } = await loadQuery<NavData>({
  query: `
  *[_type == "nav" && title=="Main"][0]{
    title,
    navItems[] {
    name,
      href,
    }
  }`,
});

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname;

console.log(currentPath);
---

<script>
  const burger = document.querySelector('button.nav-toggle');
  const navList = document.querySelector('.nav');

  burger?.addEventListener('click', () => {
    navList?.classList.toggle('open');
    burger?.classList.toggle('open');
  });
  navList?.addEventListener('mouseleave', () => {
    navList?.classList.remove('open');
    burger?.classList.remove('open');
  });
</script>

<header>
  <ul id="contact">
    <li class="desktop">
      <a href="mailto:Info@CitizensNetworkofProtection.com">
        <span><img src={emailIcon.src} alt="decorative" /></span
        >Info@CitizensNetworkofProtection.com
      </a>
    </li>
    <li>
      <a href="/" class="logo desktop"
        ><img src={logo.src} /> Citizen's Network of Protection</a
      >
    </li>
    <li class="desktop">
      <a href="tel:+18722352289">
        <span><img src={phoneIcone.src} alt="decorative" /></span>+1
        (872) 235-2289
      </a>
    </li>
    <li>
      <a href="#">Contact</a>
    </li>
  </ul>
  <nav id="menu">
    <a href="/" class="logo mobile"
      ><img src={logo.src} /> Citizen's Network of Protection</a
    >
    <ul class="nav">
      <li class={currentPath === '/' ? 'active' : ''}>
        <a href="/" class="logo desktop">Home</a>
      </li>
      {
        nav.navItems.map((item: NavItem) => (
          <li class={currentPath === item.href ? 'active' : ''}>
            <a class={`nav-list`} href={item.href}>
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>
    <button
      type="button"
      class="mobile nav-toggle"
      aria-controls="menu"
      aria-label="Click to open Navigation"
    >
    </button>
  </nav>
</header>

<style>
  .desktop {
    display: none;
  }
  .logo {
    color: var(--black);
    font-size: 1.25rem;
    text-decoration: none;
    font-weight: 900;
  }
  .logo.mobile {
    display: flex;
    align-items: center;
    font-size: 1rem;
    gap: 0.5rem;
    padding: 0;
  }
  header {
    background: var(--black);
  }
  #contact {
    display: flex;
    justify-self: flex-end;
    background: var(--black);
    color: var(--white);
    padding: 1rem 2rem;
  }
  #contact a {
    color: var(--white);
    font-size: 1.5rem;
    text-decoration-color: var(--white-transparent);
    transition: text-decoration-color var(--transition);
  }
  #contact a:hover,
  #contact a:active,
  #contact a:focus {
    text-decoration-color: var(--white);
  }
  nav {
    background-color: var(--white);
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  nav a {
    color: var(--black);
    text-decoration: none;
    display: block;
    padding-block: 1rem;
    text-decoration-color: var(--white-transparent);
    transition: all var(--transition);
  }
  nav ul a:hover {
    background: var(--mid-purple);
    color: var(--white);
  }
  ul {
    display: flex;
    flex-direction: column;
    font-size: 2rem;
  }
  nav ul {
    position: absolute;
    background: var(--white);
    padding: 1rem 1rem 2rem 1rem;
    width: 100%;
    right: 0;
    top: 8.9rem;
    z-index: 2;
    gap: 1.5rem;
    text-align: center;
    border-bottom: var(--radius);
    box-shadow: -3px 21px 20px -6px rgba(0, 0, 0, 0.35);
    transform-origin: 100% 0%;
    translate: 100%;
    scale: 0;
    transition:
      scale,
      translate 0.5s ease-in;
  }
  li {
    list-style: none !important;
    margin: 0 !important;
  }
  button.nav-toggle {
    border: none;
    background: transparent;
    font-size: 2rem;
    cursor: pointer;
    scale: 1;
    transition: scale var(--transition) ease-in;
    background: url('../images/burger-icon.svg') no-repeat center;
    width: 1.5rem;
    height: 1.5rem;
    padding: 0;
  }
  button.nav-toggle:hover {
    scale: 1.1;
  }
  button.nav-toggle.open {
    background: url('../images/close-icon.svg') no-repeat center;
  }
  .nav {
    visibility: hidden;
  }
  .nav.open {
    visibility: visible;
    scale: 100%;
    translate: 0;
  }
  @media (width > 990px) {
    .desktop {
      display: block;
    }
    .mobile {
      display: none !important;
    }
    nav {
      padding: 0;
    }
    ul {
      font-size: 1rem;
    }
    #contact a {
      font-size: 1rem;
      width: 20rem;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1rem;
    }
    ul#contact {
      flex-direction: row;
      width: 100%;
      justify-content: space-between;
      justify-self: auto; /* to nullify the justify-self in mobile */
      align-items: center;
      margin: 0;
    }

    #contact li span {
      display: inline-block;
      height: fit-content;
    }
    nav ul {
      visibility: visible;
      flex-direction: row;
      width: 100% !important;
      gap: 0;
      list-style-type: none;
      position: static;
      z-index: 1;
      padding: 0;
      margin: 0;
      translate: 0;
      scale: 100%;
      box-shadow: none;
      transition: none;
      background: linear-gradient(
        90deg,
        rgba(139, 106, 215, 1) 0%,
        rgba(139, 106, 215, 1) 33%,
        rgba(74, 39, 145, 1) 80%
      );
    }
    nav li {
      min-width: 8.4rem;
      width: 100%;
      text-align: center;
      padding-block: 0.5rem;
    }
    .nav-list {
      color: var(--white) !important;
      border-left: 1px solid #161616;
      padding-block: 0.5rem !important;
    }
    nav ul a:hover {
      background-color: transparent;
    }
    nav li:has(a:hover) {
      backdrop-filter: brightness(85%);
    }

    .logo {
      padding-block: 0.5rem !important;
    }
    .active {
      background-color: white;
      a {
        color: var(--dark-purple) !important;
        border: none;
      }
      &:hover {
        background-color: var(--light-purple) !important;
        color: var(--black) !important;
      }
    }
  }
  @media (width > 1315px) {
    nav ul {
      width: 75%;
    }
    nav li {
      min-width: 11.6rem;
    }
  }
</style>
