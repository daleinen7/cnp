---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/' },
  { name: 'Blog', href: '/' },
  { name: 'Contact', href: '/' },
];
---

<style>
  .logo {
    color: white;
    font-size: 1.5rem;
    text-decoration: none;
  }

  nav {
    background-color: var(--dark-purple);
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;

    a {
      color: white;
      text-decoration: none;
    }
  }

  ul {
    display: flex;
    gap: 1rem;
    list-style-type: none;
  }
</style>

<nav>
  <a href="/" class="logo">Citizen's Network of Protection</a>
  <ul>
    {
      navItems.map((item) => (
        <li>
          <a href={item.href}>{item.name}</a>
        </li>
      ))
    }
  </ul>
</nav>
